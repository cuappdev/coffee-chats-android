<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/classSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_edittext"
        android:popupBackground="@color/white"/>

    <AutoCompleteTextView
        android:id="@+id/majorACTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/classSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:hint="@string/major"
        android:textColorHint="@color/faded_text"
        android:textSize="20sp"
        android:padding="10dp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:textColor="@color/black"
        android:fontFamily="@font/circular_book"/>

    <EditText
        android:id="@+id/hometownEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/majorACTV"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:hint="@string/hometown"
        android:textColorHint="@color/faded_text"
        android:textSize="20sp"
        android:padding="10dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:textColor="@color/black"
        android:fontFamily="@font/circular_book"/>

    <Spinner
        android:id="@+id/pronounSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hometownEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:popupBackground="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>