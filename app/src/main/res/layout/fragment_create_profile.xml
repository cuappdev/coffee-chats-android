<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createProfileFragment"
    android:background="@color/background_green">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/header_layout"
        android:paddingBottom="20dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/signup_header"
            app:layout_constraintTop_toTopOf="@id/signup_header"
            android:layout_marginLeft="24dp"
            android:background="@drawable/ic_back_carrot"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/signup_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="@font/circular_medium"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <SearchView
        android:id="@+id/club_search"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/rounded_edittext"
        android:hint="Search"
        android:searchIcon="@drawable/search_icon"
        android:searchHintIcon="@drawable/search_icon"
        android:iconifiedByDefault="false"
        android:theme="@style/searchViewTheme"/>

    <ListView
        android:id="@+id/interests_or_clubs"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="50dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="12.0sp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/club_search"
        app:layout_constraintBottom_toTopOf="@id/signup_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/signup_next"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:background="@drawable/profile_button_background"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/circular_medium"
        android:layout_marginBottom="0dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintBottom_toTopOf="@id/add_later"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/add_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@null"
        android:text="@string/add_later_button"
        android:textSize="16sp"
        android:textColor="@color/faded_text"
        android:fontFamily="@font/circular_book"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>