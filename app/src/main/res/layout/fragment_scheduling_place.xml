<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/schedulingSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:fontFamily="@font/circular_book"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/faded_text"
        android:text="@string/scheduling_place_subtitle"/>

    <TextView
        android:id="@+id/campusTextView"
        app:layout_constraintTop_toBottomOf="@id/schedulingSubtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Campus"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/circular_medium"
        />
    <GridView
        android:id="@+id/campusGridView"
        app:layout_constraintTop_toBottomOf="@id/campusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="2"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"/>
    <TextView
        android:id="@+id/collegetownTextVIew"
        app:layout_constraintTop_toBottomOf="@id/campusGridView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Collegetown"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/circular_medium"
        />
    <GridView
        android:id="@+id/collegetownGridView"
        app:layout_constraintTop_toBottomOf="@id/collegetownTextVIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="2"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>