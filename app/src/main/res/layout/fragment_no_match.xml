<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_green">

    <TextView
        android:layout_marginTop="75dp"
        android:id="@+id/no_match_header"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_match_header"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/no_match_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/surprised_pear"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/no_match_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/no_match_subheader"
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark_green"
        android:text="@string/no_match_subheader"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/no_match_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/no_match_availability"
        android:text="@string/no_match_availability"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/no_match_subheader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>